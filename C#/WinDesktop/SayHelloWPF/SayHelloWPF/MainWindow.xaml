        xmlns:local="clr-namespace:SayHelloWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="SayHelloButton" Content="Say Hello" HorizontalAlignment="Left" Margin="239,84,0,0" VerticalAlignment="Top" Width="75" Click="SayHelloButton_Click"/>
        <TextBox x:Name="Text_box1" HorizontalAlignment="Left" Margin="265,200,0,0" TextWrapping="Wrap" Text="Hello There!" VerticalAlignment="Top" Height="80" Width="360" FontSize="36" TextAlignment="Center" Grid.ColumnSpan="2" BorderThickness="1,1,8,8" />

    </Grid>
